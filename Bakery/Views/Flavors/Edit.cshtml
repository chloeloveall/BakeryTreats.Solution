@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

@using (Html.BeginForm())
{
  <h3>Edit Flavor Details: @Html.DisplayFor(model => model.FlavorName)</h3>

  @Html.HiddenFor(model => model.FlavorId)

  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  
    <div class="form-row">
    @Html.LabelFor(model => model.FlavorName)
    @Html.TextBoxFor(model => model.FlavorName, new { placeholder = "Flavor Name", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.FlavorName, "", new { @class = "text-danger" })
  </div>

  <div class="form-row">
    @Html.LabelFor(model => model.FlavorDescription)
    @Html.TextAreaFor(model => model.FlavorDescription, new { rows = "4", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.FlavorDescription, "", new { @class = "text-danger" })
  </div>

  <h3>Add Treat to Flavor Details</h3>

  <div class="form-row">
    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId", (IEnumerable<SelectListItem>)ViewBag.TreatId, "Select Treat", new { @class = "form-control" })
  </div>

  <input type="submit" class="btn" value="Save Changes" />
}
