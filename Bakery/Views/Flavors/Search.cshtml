@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;


<h3>Search for Flavors</h3>
<form asp-controller="FlavorsController" asp-action="SearchBy" method="get">
  <div class="form-row"></div>
    <label for="search">Search:</label>
    <input type="text" name="searchString" class="form-control"/>
    <input type="submit" class="btn" value="Filter" />
  </div>
</form>

<div class="container">
  @if (@Model.Count == 0)
  {
    <h3>No results found!</h3>
  } 

  @foreach(Flavor flavor in Model)
  {
    
    <h3>@flavor.FlavorName</h3>
    <p><span class="bold">Description:</span> @flavor.FlavorDescription</p>
    <div class="container-sm">
      <button type="button" class="btn btn-sm">@Html.ActionLink($"View", "Details", new { id = flavor.FlavorId })</button>
      <button type="button" class="btn btn-sm">@Html.ActionLink($"Edit", "Edit", new { id = flavor.FlavorId })</button>
      <button type="button" class="btn btn-sm">@Html.ActionLink($"Delete", "Delete", new { id = flavor.FlavorId })</button>
    </div>   
  }

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  
</div>