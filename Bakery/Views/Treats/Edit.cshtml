@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

@using (Html.BeginForm())
{
  <h3>Edit Treat Details: @Html.DisplayFor(model => model.TreatName)</h3>

  @Html.HiddenFor(model => model.TreatId)

  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  
    <div class="form-row">
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName, new { placeholder = "Treat Name", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger" })
  </div>

  <h3>Add Treat to Flavor Details</h3>

  <div class="form-row">
    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId", (IEnumerable<SelectListItem>)ViewBag.FlavorId, "Select Flavor", new { @class = "form-control" })
  </div>

  <input type="submit" class="btn" value="Save Changes" />
}
