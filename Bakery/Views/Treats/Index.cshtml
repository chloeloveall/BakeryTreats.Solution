@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>Flavors</h1>

<a href='/treats/search' class="btn btn-lg" role="button">Search by Treat</a>
<a href='/treats/create' class="btn btn-lg" role="button">Add New Treat</a>
<a href='/' class="btn btn-lg" role="button">Home</a>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
  @foreach(Treat treat in Model)
  {
    <h3>@treat.TreatName</h3>
    <div class="container-sm">
      <button type="button" class="btn btn-sm">@Html.ActionLink($"View", "Details", new { id = treat.TreatId })</button>
      <button type="button" class="btn btn-sm">@Html.ActionLink($"Edit", "Edit", new { id = treat.TreatId })</button>
      <button type="button" class="btn btn-sm">@Html.ActionLink($"Delete", "Delete", new { id = treat.TreatId })</button>
    </div>
  }
